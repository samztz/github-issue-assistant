{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
