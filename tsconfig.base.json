{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/web/*": ["apps/web/src/*"],
      "@app/api/*": ["apps/api/src/*"],
      "@/*": ["apps/web/src/*"]
    }
  }
}